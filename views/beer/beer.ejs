<h2 class="imp"><%= beer.name %></h2>
<p><img src="/uploads/<%= beer.pic_name %>" width=200/></p>
<h4><%= beer.style %></h4>
<h1><%= beer.breweryName %></h1>
<p>SRM: <%= beer.standardReferenceMethod %></p>
<p>ABV: <%= beer.alcoholByVolume %></p>
<p>IBU: <%= beer.internationalBitteringUnits %></p>
<p><%= beer.description %></p>
<br>
<form action="/beer/<%= beer._id %>/edit" method="GET">
  <button type="submit">Edit</button>
</form>
<form action="/beer/<%= beer._id %>/delete" method="POST">
  <button type="submit">Delete</button>
</form>
<% user.role %>
<% if (user.role== "USER") { %>
<p><span class=total-likes><%= beer.likes %></span> likes</p>

<button type="submit" name="like" id="like">Like</button>
<% if (typeof message != "undefined") { %>
  <div class="error-message"><%= message %></div>
<% } %>
<% } %>


<script type="text/javascript">
  var beerInfo = <%- JSON.stringify({
    currentBeer: beer,
    currentUser: user
    }) %>;
</script>



<h3>Location</h3>
<div id="map"></div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCrtmNUIUV5jizOKyGvM3a6tlpRPvAac-Y&libraries=places"></script>


<script type="text/javascript" src="/scripts/maps.js"></script>

</script>

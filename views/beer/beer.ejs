<h1><%= beer.breweryName %></h1>
<h2><%= beer.name %></h2>

<p><img src="/uploads/<%= beer.pic_name %>" width=200/></p>
<h4><%= beer.style %></h4>
<p>SRU:
  <%= beer.standardReferenceMethod %>
</p>
<p>ABV:
  <%= beer.alcoholByVolume %>
</p>
<p>IBU:
  <%= beer.internationalBitteringUnits %>
</p>
<p>
  <%= beer.description %>
</p>
<!-- brewery, ratings, numberOfRatings -->
<br>
<form action="/beer/<%= beer._id %>/edit" method="GET">
  <button type="submit">Edit</button>
</form>
<form action="/beer/<%= beer._id %>/delete" method="POST">
  <button type="submit">Delete</button>
</form>


